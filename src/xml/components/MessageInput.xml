<?xml-stylesheet type="text/xsl" media="screen" href="../uijs.xslt"?>
<UI xmlns="https://github.com/sebastien/uijs" xmlns:out="https://github.com/sebastien/uijs" xmlns:on="https://github.com/sebastien/uijs" xmlns:x="https://github.com/sebastien/uijs" xmlns:s="https://github.com/sebastien/uijs">
  <Component name="MessageInput">
    <Description>
<![CDATA[
      An input text that can be used to add a message to a conversation.
    ]]>
    </Description>
    <Style>
      <s:MessageInput position="relative">
        <s:actions position="absolute" right="var(--pad-0)" bottom="var(--pad-0)"/>
      </s:MessageInput>
    </Style>
    <View>
      <s:MessageInput>
            <textarea class="fit-w pad-1" out:placeholder=".placeholder"></textarea>
            <s:actions>
              <button on:click="!.Send" class="icon label">send</button>
            </s:actions>
      </s:MessageInput>
    </View>
    <Data>
<![CDATA[
        {placeholder:"Continue the conversationâ€¦"}
      ]]>
    </Data>
  </Component>
</UI>
